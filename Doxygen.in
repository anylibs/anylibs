# Doxyfile 1.10.0 (or newer)

# Project settings
PROJECT_NAME           = "AnyLibs"
PROJECT_BRIEF          = "Standard library for C"
PROJECT_VERSION        = 1.0.0

# Input files and directories
INPUT                  = ./src ./include ./README.md
RECURSIVE              = YES

# File extensions to process
FILE_PATTERNS          = *.c *.h *.cpp *.hpp

# Output settings
OUTPUT_DIRECTORY       = ./docs
GENERATE_HTML          = YES
GENERATE_LATEX         = NO

# Documentation style
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = NO

# Additional settings
QUIET                  = NO
WARN_IF_UNDOCUMENTED   = YES
WARN_AS_ERROR          = NO
HTML_EXTRA_STYLESHEET  = @AWESOME_CSS_DIR@/doxygen-awesome.css

# Optional: main page documentation
USE_MDFILE_AS_MAINPAGE = README.md
